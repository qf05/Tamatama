<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shell_01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/shell_01"
            android:contentDescription="@string/background" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/shell_02">

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:layout_gravity="center_horizontal|bottom"
                android:onClick="createPet"
                android:layout_marginBottom="3dp"
                android:text="@string/create_new_pet" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/shell_03">

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:layout_gravity="center_horizontal|bottom"
                android:onClick="changePet"
                android:layout_marginBottom="6dp"
                android:text="@string/change_pet" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/shell_04">

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:layout_gravity="center_horizontal|bottom"
                android:onClick="changeNamePet"
                android:layout_marginBottom="7dp"
                android:text="@string/change_name" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/shell_05">

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:layout_gravity="center_horizontal|bottom"
                android:onClick="deletePet"
                android:layout_marginBottom="6dp"
                android:text="@string/delete_pet" />
        </FrameLayout>

        <ImageView
            android:id="@+id/shell_06"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/shell_06"
            android:contentDescription="@string/background" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/toHomeFromWalk"
        android:onClick="goBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        android:layout_gravity="bottom"
        android:background="@drawable/back"
        android:contentDescription="@string/back" />
</FrameLayout>